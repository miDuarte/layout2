<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#405A1D"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="92dp"
        android:layout_height="50dp"
        android:background="#000000"
        android:shadowColor="@color/colorPrimaryDark"
        android:text="CAPTCHA"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#00FFFFFF"
        android:textColorHint="#000000"
        tools:layout_editor_absoluteX="301dp"
        tools:layout_editor_absoluteY="380dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="324dp"
        android:layout_height="69dp"
        android:background="#8BC34A"
        android:shadowColor="#8BC34A"
        android:text="SING IN"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#8BC34A"
        android:textColorHint="#8BC34A"
        android:textColorLink="#8BC34A"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="504dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="324dp"
        android:layout_height="78dp"
        android:background="#000000"
        android:text="SING UP"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="582dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="208dp"
        android:layout_height="158dp"
        app:srcCompat="@drawable/iconfinder_techcrunch_2308133"
        tools:layout_editor_absoluteX="127dp"
        tools:layout_editor_absoluteY="44dp" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:srcCompat="#601A1515"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="237dp" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="323dp"
        android:layout_height="53dp"
        app:srcCompat="@android:color/background_light"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="308dp" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="61dp"
        android:layout_height="54dp"
        app:srcCompat="@android:drawable/ic_lock_idle_lock"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="308dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="#601A1515"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="140dp"
        tools:layout_editor_absoluteY="329dp" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="206dp"
        android:layout_height="53dp"
        app:srcCompat="@android:color/background_light"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="377dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="69dp"
        android:layout_height="30dp"
        android:lineSpacingExtra="24sp"
        android:text="E-mail"
        android:textColor="#601A1515"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="83dp"
        tools:layout_editor_absoluteY="400dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="323dp"
        android:layout_height="53dp"
        app:srcCompat="@android:color/background_light"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="244dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="61dp"
        android:layout_height="54dp"
        app:srcCompat="@drawable/iconfinder_account_1954192"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="243dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User"
        android:textColor="#601A1515"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="140dp"
        tools:layout_editor_absoluteY="266dp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="317dp"
        android:layout_height="37dp"
        android:button="@android:drawable/alert_light_frame"
        android:text="Remember Password"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="445dp" />

</androidx.constraintlayout.widget.ConstraintLayout>